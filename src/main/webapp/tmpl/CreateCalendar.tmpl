<script id="tmpl-CreateCalendar" type="text/html">
	<div class="CreateCalendar">
	<div class='CreateCalendarDialogGlass'/>
	<div class="CreateCalendar-content">
		<h2>{{#if id}}Edit{{else}}Create{{/if}} Calendar</h2>
	
		<div class="form form-horizontal">
			<div class="form-group ">
				<label class="col-sm-4 control-label">Summary:</label>
				<div class="controls">
					<textarea rows="5" style="width:280px" name="summary" placeholder="summary hear" maxlength="250">{{#if summary}}{{summary}}{{/if}}</textarea>
				</div>
				<span class="message"></span>
			</div>
			<div class="form-actions">
				<a href="#" class="btn btn-primary CreateCalendarBtn">{{#if id}}Update{{else}}Create{{/if}}</a>
				<a href="#" class="btn btn-default cancelBtn">Close</a>
			</div>
		</div>
	</div>
	</div>
</script>