.ShareCalendar .ShareCalendar-content {
    position: absolute;
    left: 30%;
    top: 10%;
    width: 600px;
    height: auto;
    border: 1px solid;
    z-index: 3;
    background: white;
    .box-shadow(2px 2px 5px 0px rgba(0, 0, 0, .5));
}

.ShareCalendar .ShareCalendar-content .form {
    padding: 20px;
}

.ShareCalendar .ShareCalendar-content .form input {
    .user-select(text);
    height: 26px;
    width: 280px;
}

.ShareCalendar .ShareCalendar-content h2 {
    height: 30px;
    line-height: 30px;
    text-align: center;
    background: #0E90D2;
    color: #ffffff;
}

.ShareCalendar .ShareCalendarDialogGlass {
    position: absolute;
    width: 100%;
    height: 100%;
    background: black;
    opacity: 0.4;
    z-index: 1;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.ShareCalendar .form-group {
    margin-bottom: 10px;
}

.ShareCalendar .form-group .controls {
    display: block;
    .ShareCalendar-item {
        width: 280px;
        margin-top: 5px;
        .sharedVal {
            width: 230px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: inline-block;
        }
        .sharedDel {
            float: right;
            cursor: pointer;
        }
    }
}

.ShareCalendar .form-horizontal .form-actions {
    margin-left : 0px;
    padding-left : 0px;
    text-align : center;
}

