.Top {
	.glyphicon-chevron-down {
		margin-left: 4px;
		top: 2px;
	}
	.glyphicon-chevron-up {
		margin-left: 4px;
		top: 2px;
	}
}

.Top .navbar-inner .navbar-brand {
	margin-left: 0px;
	height: 40px;
}

.Top .nav {
	height: 38px;
}

.Top .nav li {
	cursor: pointer;
	height: 100%;
	line-height: 38px;
	padding: 0 10px;
	color: #999999;
	float: left;
	margin-top: 5px;
}

.Top .nav li:hover {
	color: #ffffff;
}

.Top .nav li.active {
	text-decoration: none;
	height: 100%;
	color: #ffffff;
}
