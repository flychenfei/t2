  <version>0.1</version>
  <name>sampleSocial</name>
  <url>http://maven.apache.org</url>

  <!-- test -->
  <build>
    <finalName>sampleSocial</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <encoding>utf8</encoding>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <!-- gulp default to process tmpl & less files -->
          <execution>
            <id>node-gulp-default</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>gulp</executable>
              <arguments>
                <argument>default</argument>
              </arguments>
            </configuration>
          </execution>
          <!-- /gulp default to process tmpl & less files -->
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.4</version>
        <executions>

          <!-- Copy to War -->
          <execution>
            <id>copy-to-war</id>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <mkdir dir="../war" />
                <delete includeemptydirs="true">
                  <fileset dir="../war" includes="**/*" excludes=".git/"/>
                </delete>
                <copy todir="../war">
                  <fileset dir="target/samplesocial"/>
                </copy>
              </tasks>
            </configuration>
          </execution>
          <!-- /Copy to War -->

        </executions>
      </plugin>


      <plugin>
        <groupId>org.eclipse.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <configuration>
          <webApp>
            <contextPath>/samplesocial</contextPath>
          </webApp>
        </configuration>
      </plugin>
    </plugins>

  </build>
